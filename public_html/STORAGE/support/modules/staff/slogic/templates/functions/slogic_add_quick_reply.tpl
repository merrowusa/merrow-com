<form name="quick_reply" method="post" action="{SELF}">
<table width="80%" border="0" align="center" cellpadding="3" cellspacing="0" class="boxtable">
  <tr> 
    <td height="20" colspan="2" class="head">&nbsp;{LANG_SLOGIC_ADD_QUICK_REPLY}</td>
  </tr>
  <tr> 
    <td height="17" class="formfield" width="30%"><b>{LANG_SLOGIC_INFO}</b></td>
    <td height="17" width="70%"><input type="text" class="input"  name="info" size="40"></td>
  </tr>
  <tr> 
    <td height="17" class="formfield" width="30%"><b>{LANG_SLOGIC_MESSAGE}</b></td>
    <td height="17" width="70%"><textarea name="message" cols="35" rows="3"></textarea></td>
  </tr>    
  <tr>
    <td height="17" colspan="2" align="center"><input class="button" type="submit" name="submit" value="{LANG_SLOGIC_SUBMIT}"></td>
  </tr>
</table>
</form>